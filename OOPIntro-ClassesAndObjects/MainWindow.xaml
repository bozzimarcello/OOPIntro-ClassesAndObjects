<Window x:Class="OOPIntro_ClassesAndObjects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOPIntro_ClassesAndObjects"
        mc:Ignorable="d"
        Title="OOP Intro" 
        Height="450" 
        Width="800"
        FontFamily="Verdana"
        FontSize="14">
    <StackPanel>
        <DataGrid x:Name="DgrElenco" Height="350"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="BtnCaricaFile" 
                    Content="Carica File" 
                    Margin="6" Click="BtnCaricaFile_Click" />
        </StackPanel>
    </StackPanel>
</Window>
